{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		/* Strict Type-Checking Options */
		"strict": true,
		"noImplicitAny": false,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"experimentalDecorators": true,
		"lib": ["es2017"],
		"noEmit": true,
		/* dtslint needs these to operate in this directory */
		"baseUrl": ".",
		"paths": { "cafy": ["../../src"] }
	}
}
